<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:tnt="sap.tnt"
    controllerName="com.incresol.sendgridfrontendapplication.controller.HeaderPage"
    displayBlock="true"
>
    <Page id="page">
        <content>
            <tnt:ToolHeader id="shellLikeToolHeaderOnlyMandatoryControls">
                <Image
                    id="_IDGenImage"
                    src="../image/inclogo.png"
                    decorative="true"
                    tooltip="Incresol Logo"
                >
                    <layoutData>
                        <OverflowToolbarLayoutData
                            id="_IDGenOverflowToolbarLayoutData"
                            priority="NeverOverflow"
                        />
                    </layoutData>
                </Image>
                <ToolbarSpacer id="_IDGenToolbarSpacerLeft" />
                <Title
                    id="_IDGenTitle1"
                    text="Incresol Sales Mail Status Tracker Application"
                    wrapping="true"
                />
                <ToolbarSpacer id="_IDGenToolbarSpacerRight" />
                <Button
                    type="Emphasized"
                    id="logoutButton"
                    text="Logout"
                    press="onLogoutPress"
                />
            </tnt:ToolHeader>

            <Panel
                class="sapUiTinyMargin"
                headerText="Filters"
                width="98%"
                expandable="true"
            >
                <VBox>
                    <HBox>
                        <VBox>
                            <Label
                                text="Search"
                                design="Bold"
                            />
                            <Input
                                id="searchInput"
                                placeholder="Search..."
                                liveChange="onSearchLiveChange"
                                width="200px"
                            />
                        </VBox>
                        <VBox>
                            <Label
                                text="Start Time"
                                design="Bold"
                            />
                            <DatePicker
                                id="inputDate"
                                placeholder="Enter date"
                                width="200px"
                            />
                            <Button
                                text="Filter"
                                press="onFilterByDate"
                            />
                        </VBox>
                        <VBox>
                            <Label
                                text="To"
                                design="Bold"
                            />
                            <Input
                                id="inputTo"
                                placeholder="Enter To"
                                width="200px"
                            />
                            <Button
                                text="Filter"
                                press="onFilterByTo"
                            />
                        </VBox>
                    </HBox>
                </VBox>
            </Panel>

            <HBox
                class="sapUiSmallMarginEnd"
                justifyContent="End"
            >
                <Button
                    class="sapUiSmallMarginEnd"
                    text="Refresh"
                    type="Attention"
                    press="onPressRefresh"
                />
                <Button
                    text="Download as Excel"
                    type="Success"
                    press="onDownloadExcel"
                />
            </HBox>

            <Table
                id="idProductsTable"
                items="{/MailStatus}"
                mode="SingleSelect"
                selectionChange="onSelectionChange"
                alternateRowColors="true"
                backgroundDesign="Solid"
                growing="true"
                sticky="ColumnHeaders"
            >
                <columns>
                    <Column
                        id="1"
                        width="14rem"
                        visible="false"
                    >
                        <Text
                            id="_IDGenText"
                            text="sg_message_id"
                        />
                    </Column>
                    <Column
                        id="to"
                        width="16rem"
                    >
                        <Text
                            id="_IDGenText1"
                            text="To"
                        />
                    </Column>
                    <Column id="_IDGenColumn">
                        <Text
                            id="_IDGenText2"
                            text="Start Time"
                        />
                    </Column>
                    <Column id="_IDGenColumn1">
                        <Text
                            id="_IDGenText3"
                            text="Latest Time"
                        />
                    </Column>
                    <Column id="_IDGenColumn2">
                        <Text
                            id="_IDGenText4"
                            text="First Event"
                        />
                    </Column>
                    <Column id="_IDGenColumn3">
                        <Text
                            id="_IDGenText5"
                            text="Latest Event"
                        />
                    </Column>
                    <Column id="deferred">
                        <Text
                            id="_IDGenText6"
                            text="Deferred"
                        />
                    </Column>
                    <Column id="delivered">
                        <Text
                            id="_IDGenText7"
                            text="Delivered"
                        />
                    </Column>
                    <Column id="open">
                        <Text
                            id="_IDGenText8"
                            text="Open"
                        />
                    </Column>
                    <Column id="click">
                        <Text
                            id="_IDGenText9"
                            text="Click"
                        />
                    </Column>
                    <Column id="bounce">
                        <Text
                            id="_IDGenText10"
                            text="Bounce"
                        />
                    </Column>
                    <Column id="dropped">
                        <Text
                            id="_IDGenText11"
                            text="Dropped"
                        />
                    </Column>
                    <Column id="spamreport">
                        <Text
                            id="_IDGenText12"
                            text="Spam Report"
                        />
                    </Column>
                    <Column id="unsubscribe">
                        <Text
                            id="_IDGenText13"
                            text="Unsubscribe"
                        />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem
                        id="_IDGenColumnListItem"
                        vAlign="Middle"
                    >
                        <cells>
                            <Text
                                id="_IDGenText14"
                                text="{sg_message_id}"
                                visible="false"
                            />
                            <Text
                                id="_IDGenText15"
                                text="{to}"
                                width="15rem"
                            />
                            <Text
                                id="_IDGenText16"
                                text="{start_time}"
                            />
                            <Text
                                id="_IDGenText17"
                                text="{latest_time}"
                            />
                            <Text
                                id="_IDGenText18"
                                text="{first_event_status}"
                            />
                            <Text
                                id="_IDGenText19"
                                text="{latest_event_status}"
                            />
                            <Text
                                id="_IDGenText20"
                                text="{event_count/deferred}"
                            />
                            <Text
                                id="_IDGenText21"
                                text="{event_count/delivered}"
                            />
                            <Text
                                id="_IDGenText22"
                                text="{event_count/open}"
                            />
                            <Text
                                id="_IDGenText23"
                                text="{event_count/click}"
                            />
                            <Text
                                id="_IDGenText24"
                                text="{event_count/bounce}"
                            />
                            <Text
                                id="_IDGenText25"
                                text="{event_count/dropped}"
                            />
                            <Text
                                id="_IDGenText26"
                                text="{event_count/spamreport}"
                            />
                            <Text
                                id="_IDGenText27"
                                text="{event_count/unsubscribe}"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>
