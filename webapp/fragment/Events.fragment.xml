<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core">
    <Dialog id="eventDetailsDialogNew" title="Event Details" class="sapUiContentPadding">
        <content>
            <Table id="eventDetailsTableNew" items="{/eventdata}">
                <columns>
                    <Column>
                        <Text text="Event Status" />
                    </Column>
                    <Column>
                        <Text text="Event Time" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{event_status}" />
                            <Text text="{time}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
        <beginButton>
            <Button text="Close" press="onCloseDialog" />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>



